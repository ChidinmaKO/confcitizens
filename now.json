{
  "name": "confcitizens",
  "alias": ["www.confcitizens.com"],
  "version": 2,
  "regions": ["all"],
  "builds": [
    {
      "src": "next.config.js",
      "use": "@now/next",
      "config": { "newPipeline": true }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "status": 301,
      "headers": { "Location": "https://confcitizens.com/$1" }
    },
    { "src": "/", "dest": "/index" },
    {
      "src": "^/(?!_next/|favicon[.]ico)(?<username>.+)$",
      "dest": "/detail?username=$username"
    }
  ]
}
